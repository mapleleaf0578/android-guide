<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.android.anim.viewAnim.ViewAnimGuideActivity">

    <Button
        android:id="@+id/button_interpolator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Interpolator" />

    <Button
        android:id="@+id/button_anim_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="xml animation" />

    <Button
        android:id="@+id/button_drawable_animation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="drawable animation" />

</LinearLayout>
